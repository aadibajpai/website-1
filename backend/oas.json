  "paths": {
    "/${version_pipe}/user": {
      "post": {
        "tags": [],
        "summary": "Add/Update User",
        "description": "Signup user",
        "operationId": "userPost",
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "email address",
                    "example": "hello@mytiki.com",
                    "required": true
                  },
                  "referrer": {
                    "type": "string",
                    "description": "referral code",
                    "example": "AB4C"
                  },
                  "optIn": {
                    "type": "boolean",
                    "default": false,
                    "description": "optIn to design discussions"
                  },
                  "confirmed": {
                    "type": "boolean",
                    "default": false,
                    "description": "confirmed email address"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "description": "obfuscated email address",
                      "example": "****@mytiki.com"
                    },
                    "referrer": {
                      "type": "string",
                      "description": "referral code",
                      "example": "AB4C"
                    },
                    "optIn": {
                      "type": "boolean",
                      "default": false,
                      "description": "optIn to design discussions"
                    },
                    "confirmed": {
                      "type": "boolean",
                      "default": false,
                      "description": "confirmed email address"
                    }
                  }
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "type": "aws_proxy",
          "uri": "${signup_user_post_arn}",
          "passthroughBehavior": "when_no_match",
          "httpMethod": "POST",
          "timeoutInMillis": 29000
        },
        "deprecated": false,
        "security": []
      },
      "get": {
        "tags": [],
        "summary": "Get Users",
        "description": "Anonymous Signup Metrics",
        "operationId": "userGet",
        "parameters": [],
